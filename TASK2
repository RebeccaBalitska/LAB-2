using System;

namespace BekMod
{
    class Program
    {
        static void Main(string[] args)
        {

            int n = Convert.ToInt32(Console.ReadLine());
            int countZero = 0;

            while (n != 0)
            {
                if (n % 10 == 0)
                {
                    countZero++;
                }

                n = n / 10;
            }

            Console.WriteLine(countZero);
        }
    }
}
